@model PropertyMeOAuthDemo.Models.ChangedContactsRequest

@{
    ViewData["Title"] = "PropertyMe API";
}

<div class="page-header">
    <h1>Contacts Changed - API Example</h1>
</div>

<div class="row">
    <div class="col">
        @using (Html.BeginForm("Index", "Contact", FormMethod.Post)) {
            <div class="form-group">
                <label for="inputAccessToken">Access Token</label>
                @Html.TextBoxFor(m => m.AccessToken, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="inputTimeStamp">Timestamp</label>
                @Html.TextBoxFor(m => m.Timestamp, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Submit Query</button>
        }
    </div>
    @if (@ViewBag.Response != null) {
        <br />
        <br />
        <h2>
            @(@ViewBag.ResponseHeading == null ? "JSON Response" :  @ViewBag.ResponseHeading)
        </h2>
    <div class="col">
        <code>
            @Html.Raw(@ViewBag.Response)
        </code>
    </div>
}
</div>
